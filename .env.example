APP_NAME="Laravel Workflow AI"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=database
DB_PORT=3306
DB_DATABASE=laravel_workflow_ai
DB_USERNAME=root
DB_PASSWORD=secret

BROADCAST_DRIVER=log
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# Laravel Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost:5173
SESSION_DOMAIN=localhost

# AI Orchestrator URL
AI_ORCHESTRATOR_URL=http://ai-orchestrator:8001

# Qdrant Database Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# OpenAI API Key (Required for AI Orchestrator)
OPENAI_API_KEY=your_openai_api_key_here

# Faster-Whisper Model (tiny, base, small, medium, large-v2, large-v3)
# Smaller models download faster but may be less accurate.
WHISPER_MODEL=tiny
WHISPER_DEVICE=cpu # 'cpu' or 'cuda' (if GPU is available and PyTorch with CUDA is installed)
WHISPER_COMPUTE_TYPE=int8 # 'int8' for CPU, 'float16' for GPU
