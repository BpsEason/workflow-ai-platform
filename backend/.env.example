
# Laravel Application Configuration
APP_NAME="Workflow AI Platform"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration (MySQL)
DB_CONNECTION=mysql
DB_HOST=mysql # 這是 Docker 網路中的服務名稱
DB_PORT=3306
DB_DATABASE=workflow_ai_db
DB_USERNAME=workflow_user
DB_PASSWORD=workflow_password

# Broadcast, Cache, Filesystem, Queue, Session Configuration
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Laravel Sanctum for API Authentication
SANCTUM_STATEFUL_DOMAINS=localhost:5173,localhost:8081 # 前端網址，用於 CORS 和認證
SESSION_DOMAIN=localhost # Session 共享網域，與前端網址匹配

# AI Orchestrator Microservice URL
AI_ORCHESTRATOR_URL=http://ai-orchestrator:8001 # 這是 Docker 網路中的服務名稱及端口
# 外部訪問 AI Orchestrator 的端口（如果沒有 Caddy，直接訪問這個端口）
# AI_ORCHESTRATOR_EXTERNAL_URL=http://localhost:8001 

# OpenAI API Key (重要：請務必填寫您的 OpenAI API Key)
OPENAI_API_KEY=your_openai_api_key_here # 請替換為您的實際 API Key

# Faster-Whisper Model Configuration for AI Orchestrator (在 ai-orchestrator/.env 中會讀取，但這裡提供統一參考)
# WHISPER_MODEL=tiny # 可選：tiny, base, small, medium, large-v2, large-v3
# WHISPER_DEVICE=cpu # 可選：cpu, cuda
# WHISPER_COMPUTE_TYPE=int8 # 可選：int8 (CPU 優化), float16 (GPU 優化)

# Qdrant Vector Database (AI Orchestrator 會使用，這裡提供後端調用時的參考)
QDRANT_HOST=qdrant # 這是 Docker 網路中的服務名稱
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334 # gRPC 端口

# Mail Configuration (Email sending - Optional)
MAIL_MAILER=log
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration (Optional, if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

